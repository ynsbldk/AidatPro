@model AidatPro.Models.PanelAidatModel


<div class="row">

    @foreach (var item in Model.Bloks)
    {
        var borcs = (Model.Aidats.Where(x => x.BlokId == item.Id).Where(x => x.Odeme).Sum(x => x.Borc)) - (Model.Aidats.Where(x => x.BlokId == item.Id).Where(x => !x.Odeme).Sum(x => x.Borc));
        if (borcs > 0)
        {
            <div class="col-xl-3 col-md-6">
                <div class="card text-white" style="background-color:#06F669">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">@Model.Bloks.Where(x => x.Id == item.Id).FirstOrDefault().BlokAd</p>
                                <h4 class="m-b-0">@borcs</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="icofont icofont-building-alt text-white f-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-3 col-md-6">
                <div class="card text-white" style="background-color:#FB5959">
                    <div class="card-block">
                        <div class="row align-items-center">
                            <div class="col">
                                <p class="m-b-5">@Model.Bloks.Where(x => x.Id == item.Id).FirstOrDefault().BlokAd</p>
                                <h4 class="m-b-0">@borcs</h4>
                            </div>
                            <div class="col col-auto text-right">
                                <i class="icofont icofont-building-alt text-white f-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }

</div>




