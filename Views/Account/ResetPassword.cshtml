    </div>
    <![endif]-->
    <!-- Warning Section Ends -->

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    @Scripts.Render("~/Scripts/myScript")


    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/messages_tr.js"></script>

    <!-- sweet alert js -->
    <script type="text/javascript" src="/Theme/files/bower_components/sweetalert/js/sweetalert.min.js"></script>
    <script type="text/javascript" src="/Theme/files/assets/js/modal.js"></script>



    <script>
        $(document).ready(function () {

            $('#myForm').validate({ // initialize the plugin

                errorClass: 'errors',
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    },
                    ConfirmPassword: {
                        equalTo: "#password"
                    }
                }
            });




        });
    </script>

    @if (TempData["UserMessage"] != null)
    {
        <script>
            swal("Hata!", "Bu kullanıcı adı size ait değil", "error")
        </script>

    }

</body>

</html>