@model AidatPro.Models.KasaModel

@{
    ViewBag.Title = "Kasa Detay : " + Model.KasaAd;

}


<link href="~/Theme/files/assets/icon/themify-icons/themify-icons.css" rel="stylesheet" />
<link href="~/Theme/files/bower_components/sweetalert/css/sweetalert.css" rel="stylesheet" />
<!-- subscribe start -->

<div class="row">
    <div class="col-md-12 col-lg-3">
        <div class="card">
            <div class="card-block text-center">
                <i class="icofont icofont-briefcase-alt-1 text-c-green d-block f-40"></i>
                @if (string.IsNullOrEmpty(ViewBag.Bakiye))
                {
                    <h4 class="m-t-15"> <span class="text-c-green">00.00</span></h4><hr />

                }
                else
                {
                    <h4 class="m-t-15"> <span class="text-c-green">@ViewBag.Bakiye</span></h4><hr />

                }

                @if (string.IsNullOrEmpty(ViewBag.GiderBakiye))
                {
                    <h4 class="m-t-15"> <span class="text-danger">00.00</span></h4><hr />

                }
                else
                {
                    <h4 class="m-t-15"> <span class="text-danger">@ViewBag.GiderBakiye</span></h4><hr />

                }
                
            </div>
            <div class="card-footer bg-c-green">
                <div class="row align-items-center">
                    <div class="col-9">
                        <p class="text-white m-b-0">% rapor</p>
                    </div>
                    <div class="col-3 text-right">
                        <i class="feather icon-trending-up text-white f-16"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="card">
            <div class="card-block">
                <!-- Row start -->
                <div class="row m-b-30">
                    <div class="col-lg-12 col-xl-12">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs md-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#home3" role="tab">Personel</a>
                                <div class="slide"></div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#profile3" role="tab">Son İşlemler</a>
                                <div class="slide"></div>
                            </li>                          
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content card-block">
                            <div class="tab-pane active" id="home3" role="tabpanel">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12">
                                        <div class="card user-card-full">
                                            <div class="row m-l-0 m-r-0">
                                                <div class="col-sm-4 bg-c-green user-profile">
                                                    <div class="card-block text-center text-white">
                                                        <div class="m-b-10">
                                                            <i class="fa fa-mail-forward fa-2x"></i>
                                                        </div>
                                                        <p>Sorumlu Personel Adı</p>
                                                        <h6 class="f-w-600"><a class="text-white" href="@Url.Action("SinglePersonel","Personel",new {id=Model.SorumluPersonel.Id })">@Model.SorumluPersonel.PersonelAd</a></h6>

                                                    </div>
                                                </div>
                                                <div class="col-sm-8">
                                                    <div class="card-block">
                                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Sorumlu Personel</h6>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Email</p>
                                                                <h6 class="text-muted f-w-400">@Model.SorumluPersonel.PersonelMail</h6>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Görev</p>
                                                                <h6 class="text-muted f-w-400">@Model.SorumluPersonel.PersonelGorev</h6>
                                                            </div>
                                                        </div>
                                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Detay</h6>
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">İş Başlangıç Tarihi</p>
                                                                <h6 class="text-muted f-w-400">@Model.SorumluPersonel.IsBaslangicTarih.ToString("dddd, dd MMMM yyyy")</h6>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                <p class="m-b-10 f-w-600">Değiştir</p>
                                                                <button type="button" data-toggle="modal" data-target="#default-Modal" class="btn btn-danger btn-sm">Değiştir</button>
                                                            </div>
                                                        </div>
                                                        <div class="social-link list-unstyled m-t-40 m-b-10">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="tab-pane" id="profile3" role="tabpanel">
                                @Html.Action("KasaIslem", "Kasa", new { id = Model.Id })
                            </div>                          
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->
    </div>
</div>

@Html.Partial("PersonelDegistir", Model)




@section Scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/messages_tr.js"></script>

    <script src="~/Theme/files/bower_components/sweetalert/sweetalert.min.js"></script>
    <!-- Bootstrap date-time-picker js -->
    <script type="text/javascript" src="~/Theme/files/assets/pages/advance-elements/moment-with-locales.min.js"></script>
    <script type="text/javascript" src="~/Theme/files/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/Theme/files/assets/pages/advance-elements/bootstrap-datetimepicker.min.js"></script>
    <!-- Date-range picker js -->
    <script type="text/javascript" src="~/Theme/files/bower_components/bootstrap-daterangepicker/js/daterangepicker.js"></script>

    <script type="text/javascript" src="~/Theme/files/bower_components/datedropper/js/datedropper.min.js"></script>
    <script type="text/javascript" src="~/Theme/files/assets/pages/advance-elements/custom-picker.js"></script>



    <script src="~/Theme/files/bower_components/select2/js/select2.full.min.js"></script>
    <script src="~/Theme/files/assets/pages/advance-elements/select2-custom.js"></script>




    <script type="text/javascript">
    @if(!string.IsNullOrEmpty(ViewBag.Mesaj))
        {<text>
        swal("@ViewBag.Titles", "@ViewBag.Mesaj", "@ViewBag.Types");
        </text>}
    </script>



}


